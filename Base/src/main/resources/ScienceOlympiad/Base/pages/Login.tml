<html t:type="layout" title="Login"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="bodyContent">
	<div class="row" style="padding: 0 2em 2em 2em">
        <t:form t:id="login">
            <h2>Please sign in</h2>
            <t:textfield t:id="userName" class="input-block-level" validate="required" placeholder="User Name"/>
            <t:passwordfield t:id="password" class="input-block-level" validate="required" placeholder="Password"/>
            <br/>
            <t:submit class="btn btn-large btn-primary" value="Sign in"/>
        </t:form>
	</div>
</div>

</html>
